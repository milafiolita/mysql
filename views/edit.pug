doctype html
html(lang='en')
  head
    title
    meta(charset='utf-8')
    link(href='https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css', rel='stylesheet')
    script(type='text/javascript', src='http://maps.google.com/maps/api/js?sensor=false')
    script(type='text/javascript', src='https://code.jquery.com/jquery-1.11.3.min.js')
    link(rel='stylesheet', href='https://formden.com/static/cdn/bootstrap-iso.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css')
    script.
      $(document).ready(function(){
      var date_input=$('input[name="date_of_birth"]'); //our date input has the name "date"
      var options={
      format: 'mm/dd/yyyy',
      todayHighlight: true,
      autoclose: true,
      };
      date_input.datepicker(options);
      })
  body
    .container.mx-auto.bootstrap-iso
      .flex.justify-center
        form.shadow-md.p-4.m-3.w-full(action='/edit', method='POST')
          .bg-grey-light.rounded.p-2.mb-4
            h2.text-black.text-justify Edit Data Students
          //.mb-3
            label.block.text-black.text-sm.font-bold.mb-2(for='id', class='w-1/6')  ID 
            input#id.shadow.appearance-none.border.rounded.py-2.px-3.text-grey-darker(name='student_id', type='text', value=sid)
          .mb-3
            label.block.text-black.text-sm.font-bold.mb-2(for='name', class='w-1/6')  Name 
            input#name.shadow.appearance-none.border.rounded.py-2.px-3.text-grey-darker(name='name', type='text', value=sname)
            input#oldId(type="hidden", name="oldId", value=sOldId)
          .mb-3
            label.block.text-black.text-sm.font-bold.mb-2(for='gender', class='w-1/6')  Gender 
            input(type='radio', name='gender', align='left', value='M', checked=sgender=='M')
            |  M
            input(type='radio', name='gender', value='F', checked=sgender=='F')
            |  F
          .mb-3
            label.block.text-black.text-sm.font-bold.mb-2(for='date_of_birth', class='w-1/6')  Date Of Birth 
            input#date_of_birth.shadow.appearance-none.border.rounded.py-2.px-3.text-grey-darker(name='date_of_birth', type='text', value=sdob)
          .mb-4
            label.block.text-black.text-sm.font-bold.mb-3.mt-6(class='w-1/6', for='address')
              | Address
            textarea#address.shadow.appearance-none.border.rounded.h-20.py-6.px-3(class='w-1/2', name='address')=saddress
          .flex.items-center.justify-between.mb-2
            input.bg-blue.text-white.font-bold.py-2.px-4.rounded(type='submit', value='Submit', class='hover:bg-blue-dark')
